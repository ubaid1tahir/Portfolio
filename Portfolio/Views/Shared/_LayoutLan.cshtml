<!DOCTYPE html>
<html lang="en" dir="ltr" data-nav-layout="horizontal" data-nav-style="menu-click" data-menu-position="fixed" data-theme-mode="light">

    <head>

        <!-- Meta Data -->
		<meta charset="UTF-8">
        <meta name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no'>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Basic Meta Tags -->
    <meta name="description" content="Professional portfolio showcasing my work in ASP.NET MVC, Bootstrap 5, and responsive web design. Explore my projects and skills.">
    <meta name="author" content="Muhammad Ubaid">
    <meta name="keywords" content="portfolio, web developer, ASP.NET MVC, Bootstrap 5, admin dashboard, dotnet core, responsive design, frontend developer">

    <!-- Open Graph / Facebook Meta Tags (for LinkedIn, WhatsApp, Facebook, etc.) -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://ubaiddev.com/">
    <meta property="og:title" content="Muhamamd Ubaid | Professional Web Developer Portfolio">
    <meta property="og:description" content="Professional portfolio showcasing my work in ASP.NET MVC, Bootstrap 5, and responsive web design.">
    <meta property="og:image" content="https://ubaiddev.com/assets/images/MyPic.png"> <!-- Your photo for sharing -->
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">

    <!-- Twitter Card Meta Tags (for Twitter sharing) -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://ubaiddev.com/">
    <meta name="twitter:title" content="Muhammad Ubaid | Professional Web Developer Portfolio">
    <meta name="twitter:description" content="Professional portfolio showcasing my work in ASP.NET MVC, Bootstrap 5, and responsive web design.">
    <meta name="twitter:image" content="https://ubaiddev.com/assets/images/MyPic.png"> <!-- Your photo for Twitter -->
    <!-- Favicon & Apple Touch Icon (Logo for Browser & Mobile) -->
    <link rel="icon" type="image/png" href="https://ubaiddev.com/assets/images/MyPic.png">
    <link rel="apple-touch-icon" href="https://ubaiddev.com/assets/images/MyPic.png">
        <!-- TITLE -->
    <title>Muhammad Ubaid - @ViewData["Title"] | Professional Web Developer Portfolio</title>

        <!-- FAVICON -->
        <link rel="icon" href="@Url.Content("~/assets/images/MyPic.png")" type="image/x-icon">

        <!-- BOOTSTRAP CSS -->
	    <link  id="style" href="@Url.Content("~/assets/libs/bootstrap/css/bootstrap.min.css")" rel="stylesheet">

        <!-- STYLES CSS -->
        <link href="@Url.Content("~/assets/css/styles.css")" rel="stylesheet">

        <!-- ICONS CSS -->
        <link href="@Url.Content("~/assets/CSS/icons.css")" rel="stylesheet">
        
        <partial name="~/Views/Shared/Layouts/landing/_styles.cshtml">

        @await RenderSectionAsync("Styles", required: false)

	</head>

	<body class="landing-body">

        <!-- SWITCHER -->

        <partial name="~/Views/Shared/Layouts/landing/_switcher.cshtml">

        <!-- END SWITCHER -->

        <!-- PAGE -->
        <div class="landing-page-wrapper">

            <!-- HEADER -->

            <partial name="~/Views/Shared/Layouts/landing/_header.cshtml">

            <!-- END HEADER -->

            <!-- SIDEBAR -->

            <partial name="~/Views/Shared/Layouts/landing/_sidebar.cshtml">

            <!-- END SIDEBAR -->

            <!-- MAIN-CONTENT -->

            <div class="main-content landing-main">

                @RenderBody()


                    <!-- FOOTER -->
                    
                    <partial name="~/Views/Shared/Layouts/landing/_footer.cshtml">

                    <!-- END FOOTER -->

            </div> 
            <!-- END MAIN-CONTENT -->

		</div>
        <!-- END PAGE-->

        <!-- SCRIPTS -->

        <partial name="~/Views/Shared/Layouts/landing/_scripts.cshtml">

        @await RenderSectionAsync("Scripts", required: false)

        <!-- STICKY JS -->
		<script src="@Url.Content("~/assets/js/sticky.js")"></script>

        <!-- END SCRIPTS -->

	</body>
</html>
