@section styles {
    <style>
        .mySwiper {
            width: 270px;
            height: 270px;
            margin: 0 auto;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .swiper-slide img {
                width: 250px;
                height: 250px;
                object-fit: cover;
                border-radius: 50%;
                border: 4px solid #3a7afe;
                transition: transform 0.8s ease-in-out;
            }

        .swiper-pagination-bullet {
            background: #3a7afe;
        }
    </style>


    <!-- In <head> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

    <style>
        /* Consistent with homepage styling */
        .project-card {
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            height: 100%;
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
        }

            .project-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            }

        .project-img {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .tech-badge {
            background-color: #f0f4ff;
            color: #3a7afe;
            padding: 4px 10px;
            border-radius: 4px;
            font-size: 0.75rem;
            margin-right: 5px;
            margin-bottom: 5px;
            display: inline-block;
        }

        .category-filter {
            margin-bottom: 30px;
        }

        .category-btn {
            border: 1px solid #e2e8f0;
            background: white;
            color: #64748b;
            padding: 8px 16px;
            margin: 0 5px;
            border-radius: 4px;
            transition: all 0.3s ease;
            font-size: 14px;
        }

            .category-btn:hover, .category-btn.active {
                background: #3a7afe;
                color: white;
                border-color: #3a7afe;
            }

        .card-body {
            padding: 1.5rem;
        }

        .card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .card-text {
            color: #64748b;
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .btn-outline-primary {
            border-color: #3a7afe;
            color: #3a7afe;
        }

            .btn-outline-primary:hover {
                background: #3a7afe;
                color: white;
            }
    </style>
    <style>
        .cursor {
            display: inline-block;
            animation: blink 0.7s steps(1) infinite;
            color: #fff;
        }

        @@keyframes blink {
            50% {
