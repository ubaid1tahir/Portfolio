        .download-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 99;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 5px 20px rgba(110,72,170,0.3);
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

            .download-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(110,72,170,0.4);
                color: white;
            }

        @@media print {
            body {
                background: white !important;
                padding: 0 !important;
            }

            .resume-container {
                box-shadow: none;
                margin: 0;
                border-radius: 0;
            }

            .download-btn {
                display: none !important;
            }

            .resume-header {
                padding: 2rem 0;
            }
        }

        @@media (max-width: 768px) {
            .resume-body {
                padding: 2rem;
            }

            .contact-info {
                flex-direction: column;
                gap: 0.5rem;
                align-items: center;
            }

            .contact-item {
                width: fit-content;
            }

            .name {
                font-size: 1.8rem;
            }

            .title {
                font-size: 1.1rem;
            }

            .skill-category {
                min-width: 100%;
            }
        }
    </style>
</head>
