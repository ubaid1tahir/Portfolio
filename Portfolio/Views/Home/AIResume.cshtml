            }

        .project-desc {
            color: #666;
            margin-bottom: 1rem;
        }

        .tech-stack {
            font-family: 'Roboto Mono', monospace;
            background: var(--light);
            padding: 1rem;
            border-radius: 6px;
            font-size: 0.85rem;
            margin: 1rem 0;
            border-left: 3px solid var(--primary);
            color: var(--dark);
