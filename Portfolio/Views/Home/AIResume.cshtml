        :root {
            --primary: #6e48aa;
            --secondary: #9d50bb;
            --dark: #1e1a2f;
            --light: #f8f5ff;
            --accent: #4776e6;
            --neon: #00f2fe;
        }

        body {
            font-family: 'Poppins', sans-serif;
            line-height: 1.6;
            color: var(--dark);
            background-color: #f0f0f7;
            background-image: radial-gradient(circle at 10% 20%, rgba(110,72,170,0.05) 0%, rgba(157,80,187,0.05) 90%);
