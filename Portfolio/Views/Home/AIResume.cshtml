                box-shadow: 0 15px 30px rgba(110,72,170,0.1);
            }

        .project-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .project-title i {
                color: var(--primary);
            }

        .project-desc {
            color: #666;
            margin-bottom: 1rem;
        }

        .tech-stack {
            font-family: 'Roboto Mono', monospace;
            background: var(--light);
            padding: 1rem;
            border-radius: 6px;
            font-size: 0.85rem;
            margin: 1rem 0;
            border-left: 3px solid var(--primary);
            color: var(--dark);
        }

        .certification-card {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #eee;
        }

            .certification-card:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .cert-icon {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2rem;
            flex-shrink: 0;
        }

        .cert-content h5 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.3rem;
            color: var(--dark);
        }

        .cert-issuer {
            font-size: 0.95rem;
            color: #777;
            margin-bottom: 0.3rem;
        }

        .cert-date {
            font-size: 0.85rem;
            color: var(--primary);
            font-weight: 500;
        }

        .download-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 99;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 5px 20px rgba(110,72,170,0.3);
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

            .download-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(110,72,170,0.4);
                color: white;
            }

        @@media print {
            body {
                background: white !important;
                padding: 0 !important;
            }

            .resume-container {
                box-shadow: none;
                margin: 0;
                border-radius: 0;
            }

            .download-btn {
                display: none !important;
            }

            .resume-header {
                padding: 2rem 0;
            }
        }

        @@media (max-width: 768px) {
            .resume-body {
                padding: 2rem;
            }

            .contact-info {
                flex-direction: column;
                gap: 0.5rem;
                align-items: center;
            }

            .contact-item {
                width: fit-content;
            }

            .name {
                font-size: 1.8rem;
            }

            .title {
                font-size: 1.1rem;
            }

            .skill-category {
                min-width: 100%;
            }
        }
    </style>
</head>
